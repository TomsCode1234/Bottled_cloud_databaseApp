<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_change_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/backdrop"
    tools:context="com.fujdevelopers.bottled.changePassword">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Old Password:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/olpsswd"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:fontFamily="casual" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/oldedt"
            android:hint="Old Password..."
            android:fontFamily="casual"
            android:textColor="?android:attr/textColorLink" />

        <TextView
            android:text="New Password:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/newPassWd"
            android:textSize="18sp"
            android:fontFamily="casual"
            android:textStyle="normal|bold"
            android:textColor="@color/colorAccent" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/newedt"
            android:hint="New Password..."
            android:fontFamily="casual"
            android:textColor="?android:attr/textColorLink" />

        <TextView
            android:text="Confirm New Password:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/confNewPassWd"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:textColor="@color/colorAccent"
            android:fontFamily="casual" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/confnewedt"
            android:hint="Confirm New Password..."
            android:fontFamily="casual"
            android:textColor="?android:attr/textColorLink" />

        <Button
            android:text="Change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/changePasswdBtn"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:fontFamily="casual"
            android:background="@drawable/buttonselector"
            android:textColor="@color/backdrop"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_marginTop="30dp" />

    </LinearLayout>
</RelativeLayout>
